<%= form_for(@step) do |f| %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :body %><br>
    <%= f.text_area :body, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :pdf_url %><br>
    <%= f.text_field :pdf_url, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.submit "Submit", class: "btn btn-primary btn-lg" %>
  </div>
<% end %>
