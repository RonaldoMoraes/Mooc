<%= form_for(@step) do |f| %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>
  <div class="field">
    <%= f.label :img_url %><br>
    <%= f.text_field :img_url %>
  </div>
  <div class="field">
    <%= f.label :pdf_url %><br>
    <%= f.text_field :pdf_url %>
  </div>
  <div class="field">
    <%= f.label :tutorial_id %><br>
    <%= f.text_field :tutorial_id %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
