<%= form_for(@step) do |f| %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :body %><br>
    <%= f.text_area :body, class: "form-control", style: "height: 150px" %>
  </div>
  <div class="form-group">
    <%= f.label :pdf_url %><br>
    <%= f.text_field :pdf_url, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :video_url %><br>
    <%= f.text_field :video_url, class: "form-control", placeholder: "https://youtube.com.br/embed/?" %>
  </div>
    <%= f.hidden_field :tutorial_id %>
    <p></p>
  <div class="form-group">
    <%= f.submit "Submit", class: "btn btn-primary btn-lg" %>
  </div>
</div>
<% end %>
