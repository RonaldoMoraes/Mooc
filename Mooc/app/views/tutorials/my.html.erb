<div class="" style="margin: 20px 0">
  <%= link_to 'New', new_tutorial_path, class: "btn btn-default", style: "width: 49.5%" %>
  <%= link_to 'All', tutorials_path, class: "btn btn-default", style: "width: 49.5%" %>
</div>
<h1>Listing My</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Category</th>
      <th>Followers</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tutorials.each do |tutorial| %>
      <tr>
        <td><%= tutorial.title %></td>
        <td><%= tutorial.user.name %></td>
        <td><%= tutorial.category.name %></td>
        <td><%= "99" %></td>
        <td><%= link_to 'Show', tutorial %></td>
        <td><%= link_to 'Edit', edit_tutorial_path(tutorial) %></td>
        <td><%= link_to 'Destroy', tutorial, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
