<% if @is_student == false %>
  <a href="<%= follow_tutorial_path %>" class="btn btn-success btn-sm">Follow</a>
<% elsif @is_student == true %>
  <a href="<%= unfollow_tutorial_path %>" class="btn btn-danger btn-sm">Unollow</a>
<% end %>

<% if @user_like != true %>
  <a href="<%= like_tutorial_path %>" class="btn btn-success btn-sm">Like</a>
<% else %>
  <a href="<%= unlike_tutorial_path %>" class="btn btn-danger btn-sm">Unlike</a>
<% end %>

<p>
  <strong>Title:</strong>
  <%= @tutorial.title %>
</p>

<p>
  <strong>User:</strong>
  <%= @tutorial.user %>
</p>

<p>
  <strong>Category:</strong>
  <%= @tutorial.category %>
</p>

<p>
  <strong>Description:</strong>
  <%= @tutorial.description %>
</p>

<hr>

<% @steps.each do |step| %>
	<p><b>Name: </b><%= step.name %></p><br>
	<p><b>Text: </b><%= step.body %></p><br>
	<p><b>PDF: </b><%= step.pdf_url %></p><br>
	<p><b>Imagem: </b><%= step.img_url %></p><br><br>
<% end %>

<div>BOOTSTRAP TOGGLE THIS
	<%= render "form_for_step" %>
</div>

<%= link_to 'Edit', edit_tutorial_path(@tutorial) %> |
<%= link_to 'Back', tutorials_path %>
